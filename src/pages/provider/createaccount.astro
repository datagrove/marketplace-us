---
import Layout from "../../layouts/PageLayout.astro";
import { ProviderRegistration } from "../../components/users/ProviderRegistration";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout pageTitle={t("pageTitles.createProviderAccount")} pageDescription={t("pageDescriptions.createProviderAccount")}>
  <div
    class="border border-border1 dark:border-border1-DM rounded flex flex-col items-center w-96"
  >
    <h1 class="text-xl text-ptext1 dark:text-ptext1-DM py-4">
      {t("pageTitles.createProviderAccount")}
    </h1>
    <div class="w-full px-6 py-4">
      <ProviderRegistration client:only="solid-js" />
    </div>
  </div>
</Layout>
