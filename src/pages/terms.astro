---
import Layout from "@layouts/PageLayout.astro";
import { Content } from "@content/policies/terms.mdx";
import { getLangFromUrl, useTranslations } from "@i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const translateLink = () => {
  if (lang === "en") {
    return "#english";
  } else if (lang === "fr") {
    return "#franÃ§ais";
  } else if (lang === "es") {
    return "#";
  }
};

const classes = () => {
  if (lang === "en" || lang === "fr") {
    return "underline text-link1 dark:text-link1-DM";
  } else if (lang === "es") {
    return "";
  }
}
---

<Layout pageTitle={t("pageTitles.terms")} pageDescription={t("pageDescriptions.terms")}>
  <div class="mx-6">
    <div class="mb-8">
      <h1 class="font-bold text-3xl mb-2 text-ptext1 dark:text-ptext1-DM">{t("pageTitles.terms")}</h1>
      <p><a class=`${classes()}` href={translateLink()}>{t("messages.translation")}</a>{t("messages.translations")}</p>
    </div>
    <div class="prose dark:prose-invert">
      <Content />
    </div>
  </div>
</Layout>
