---
import { SITE } from "../../config";
import PageLayout from "@layouts/PageLayout.astro";
import { SetNewPassword } from "@components/users/SetNewPassword";
import { getLangFromUrl, useTranslations } from "@i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<PageLayout pageTitle={t("pageTitles.resetPassword")} pageDescription={t("pageDescriptions.resetPassword")}>
  <div
    class="border border-border1 dark:border-border1-DM rounded flex flex-col items-center w-96"
  >
    <h2 class="text-xl text-ptext1 dark:text-ptext1-DM py-4">
      {t("pageTitles.resetPassword")}
    </h2>
    <div class="w-full px-6 py-4">
      <SetNewPassword client:only="solid-js" />
    </div>
  </div>
</PageLayout>
