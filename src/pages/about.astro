---
import Layout from "@layouts/PageLayout.astro";
import { getLangFromUrl, useTranslations } from "@i18n/utils";
import { getCollection } from "astro:content";
import TeamAbout from "@src/components/common/TeamAbout.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const policyPage = await getCollection(
    "about",
    ({ data }) => data.lang === lang && data.type === "about"
);
const { Content } = await policyPage[0].render();
---

<Layout
    pageTitle={t("pageMetaTitles.home")}
    pageDescription={t("pageDescriptions.about")}
>
    <div class="mx-6">
        <div class="mb-8">
            <!-- <h1 class="font-bold text-3xl mb-2 text-ptext1 dark:text-ptext1-DM">
                {t("pageTitles.about")}
            </h1> -->
        </div>
        <div class="prose dark:prose-invert">
            <Content />
        </div>
        <br />
        <!-- <div>
            <TeamAbout />
        </div> -->
    </div>
</Layout>
