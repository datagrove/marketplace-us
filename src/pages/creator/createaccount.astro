---
import Layout from "@layouts/PageLayout.astro";
import { CreatorRegistration } from "@components/members/CreatorRegistration";
import { getLangFromUrl, useTranslations } from "@i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout
    pageTitle={t("pageTitles.createCreatorAccount")}
    pageDescription={t("pageDescriptions.createCreatorAccount")}
>
    <div
        class="border border-border1 dark:border-border1-DM rounded flex flex-col items-center w-96"
    >
        <h1 class="text-xl text-ptext1 dark:text-ptext1-DM pt-4">
            {t("h1ElementText.createCreatorAccount")}
        </h1>
        <div class="w-full px-6">
            <CreatorRegistration client:only="solid-js" />
        </div>
    </div>
</Layout>
