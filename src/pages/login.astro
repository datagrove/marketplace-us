---
import { SITE } from "../config";
import PageLayout from "@layouts/PageLayout.astro";
import { Auth } from "../lib/Auth";
import { PasswordReset } from "../lib/PasswordReset";
import { getLangFromUrl, useTranslations } from "@i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<PageLayout
    pageTitle={t("pageMetaTitles.login")}
    pageDescription={t("pageDescriptions.login")}
>
    <div>
        <div class="text-center mt-4 mb-8">
            <h1 class="text-xl w-full italic text-ptext1 dark:text-ptext1-DM">
                {t("h1ElementText.login")}
            </h1>
        </div>
        <div
            class="bg-background1 border-border1 border max-w-md max-h-max p-5 m-auto rounded-md dark:bg-background1-DM dark:border-border1-DM"
        >
            <Auth client:only="solid-js" />
            <div class="m-2"></div>
            <PasswordReset client:only="solid-js" />
        </div>
    </div>
</PageLayout>
