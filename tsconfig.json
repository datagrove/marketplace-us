{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "types": ["vite/client", "vite-plugin-pwa/client", "@testing-library/jest-dom"],
    "baseUrl": ".",
    "paths": {
        "@components/*": ["src/components/*"],
        "@content/*": ["src/content/*"],
        "@layouts/*" : ["src/layouts/*"],
        "@i18n/*" : ["src/i18n/*"],
        "@utils/*" : ["src/utils/*"],
        "@assets/*" : ["src/assets/*"],
        "@lib/*" : ["src/lib/*"],
        "@src/*": ["src/*"],
        "@pages/*": ["src/pages/*"],
    },
    "lib": [
      "dom.iterable"
    ]
  }
}
